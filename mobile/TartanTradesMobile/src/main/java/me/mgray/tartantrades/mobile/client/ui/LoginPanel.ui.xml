<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:mgwt='urn:import:com.googlecode.mgwt.ui.client.widget'
             xmlns:bb='urn:import:com.googlecode.mgwt.ui.client.widget.buttonbar'>
    <mgwt:LayoutPanel>
        <mgwt:HeaderPanel>
            <mgwt:center>
                <g:HTML ui:field="center">TartanTrades</g:HTML>
            </mgwt:center>
        </mgwt:HeaderPanel>

        <mgwt:ScrollPanel scrollingEnabledX="false">
            <g:FlowPanel>
                <mgwt:RoundPanel>
                    <mgwt:FormListEntry ui:field="username"/>
                    <mgwt:FormListEntry ui:field="password"/>
                </mgwt:RoundPanel>
                <mgwt:Button ui:field="loginButton" text="Login"/>
                <g:HTML ui:field="token">token</g:HTML>
            </g:FlowPanel>
        </mgwt:ScrollPanel>
    </mgwt:LayoutPanel>
</ui:UiBinder>